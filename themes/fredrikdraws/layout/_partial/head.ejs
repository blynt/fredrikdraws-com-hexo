<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=2.0, minimum-scale=1.0"/>

    <link rel="alternate" type="application/rss+xml" title="<%= config.title %>" href="<%= full_url_for(`/rss.xml`) %>" />
    <link rel="alternate" type="application/json" title="<%= config.title %>" href="<%= full_url_for(`/feed.json`) %>" />

    <% if (theme.favicon){ %>
      <link rel="icon" href="<%- theme.favicon %>">
    <% } %>

    <%- open_graph([]) %>

    <% var title = page.title; %>
    <title><% if (title){ %><%= title %> - <% } %><%= config.title %></title>

    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <header>
      <a class="logo" href="/">
        <img src="/images/logo.svg" alt="Fredrik Draws" />
      </a>
      <h1>Fredrik Draws</h1>
      <p>A little webcomic by <a href="https://www.blynt.com">Fredrik Berglund</a>.</p>
    </header>
